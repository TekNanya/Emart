@page
@model RegisterModel
@{
    ViewData["Title"] = "Регистрация";
    Layout = "/Views/Shared/_Layout.cshtml"; // Use the main customer layout
}

<div class="container-fluid bg-light py-5 min-vh-100 d-flex align-items-center">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-xl-10">
                <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                    <div class="row g-0">
                        <div class="col-md-5 bg-dark text-white p-5 d-flex flex-column justify-content-center text-center">
                            <div class="mb-4">
                                <i class="bi bi-bag-heart-fill text-orange display-1"></i>
                            </div>
                            <h2 class="fw-bold display-6 mb-3">Присоединяйтесь к <span class="text-orange">AfroMart</span></h2>
                            <p class="lead opacity-75">Создайте аккаунт, чтобы отслеживать заказы и получать персональные скидки.</p>
                        </div>

                        <div class="col-md-7 bg-white p-4 p-lg-5">
                            <h2 class="fw-bold mb-4">Регистрация</h2>

                            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                                <div class="form-floating mb-3">
                                    <input asp-for="Input.Email" class="form-control border-0 bg-light rounded-3" autocomplete="username" placeholder="name@example.com" />
                                    <label class="text-muted">Email адрес</label>
                                    <span asp-validation-for="Input.Email" class="text-danger small"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input asp-for="Input.Password" class="form-control border-0 bg-light rounded-3" autocomplete="new-password" placeholder="password" />
                                    <label class="text-muted">Пароль</label>
                                    <span asp-validation-for="Input.Password" class="text-danger small"></span>
                                </div>

                                <div class="form-floating mb-4">
                                    <input asp-for="Input.ConfirmPassword" class="form-control border-0 bg-light rounded-3" autocomplete="new-password" placeholder="password" />
                                    <label class="text-muted">Подтвердите пароль</label>
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                                </div>

                                <button id="registerSubmit" type="submit" class="btn btn-orange w-100 py-3 rounded-pill fw-bold text-white shadow-sm mb-4">
                                    Создать аккаунт
                                </button>
                            </form>

                            <div class="text-center pt-3 border-top">
                                <p class="text-muted">Уже есть аккаунт? <a asp-page="./Login" class="text-orange fw-bold text-decoration-none">Войти</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    :root {
        --afro-orange: #D35400; /* Your specific Dark Orange */
    }

    .text-orange {
        color: var(--afro-orange) !important;
    }

    .bg-orange {
        background-color: var(--afro-orange) !important;
    }

    .btn-orange {
        background-color: var(--afro-orange);
        border: none;
        transition: all 0.3s ease;
    }

        .btn-orange:hover {
            background-color: #A04000;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(211, 84, 0, 0.3) !important;
        }

    /* Fix overlapping text on smaller screens */
    .display-6 {
        font-size: calc(1.3rem + 1.5vw);
    }

    .form-control:focus {
        background-color: #fff !important;
        box-shadow: 0 0 0 0.25rem rgba(211, 84, 0, 0.25);
        border: 1px solid var(--afro-orange) !important;
    }
</style>