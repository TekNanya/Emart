@model IEnumerable<ecommerce.Models.Order>
@{
    ViewData["Title"] = "Мои заказы";
}

<div class="container py-5">
    <h2 class="fw-bold mb-4">История ваших заказов</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info shadow-sm">
            У вас пока нет оформленных заказов. <a asp-controller="Home" asp-action="Index" class="alert-link">Начать покупки</a>.
        </div>
    }
    else
    {
        <div class="table-responsive shadow-sm rounded">
            <table class="table table-hover align-middle mb-0 bg-white">
                <thead class="table-dark">
                    <tr>
                        <th class="ps-4">Заказ #</th>
                        <th>Дата</th>
                        <th>Сумма</th>
                        <th>Статус</th>
                        <th class="text-end pe-4">Детали</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td class="ps-4"><strong>@order.OrderNumber</strong></td>
                            <td>@order.OrderDate.ToString("dd.MM.yyyy")</td>
                            <td class="fw-bold">₽@order.TotalAmount.ToString("N0")</td>
                            <td>
                                @{
                                    var badgeClass = order.Status switch {
                                        "New" => "bg-primary",
                                        "Shipped" => "bg-warning text-dark",
                                        "Completed" => "bg-success",
                                        _ => "bg-secondary"
                                    };
                                }
                                <span class="badge @badgeClass">@order.Status</span>
                            </td>
                            <td class="text-end pe-4">
                                <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-outline-primary">
                                    Просмотр
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>