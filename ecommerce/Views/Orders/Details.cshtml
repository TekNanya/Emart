@model ecommerce.Models.Order
@{
    ViewData["Title"] = "Детали заказа";
}

<div class="container py-5">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-white py-3">
            <h4 class="mb-0">Детали заказа <strong>#@Model.OrderNumber</strong></h4>
        </div>
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-6">
                    <h5>Информация о доставке</h5>
                    <p class="mb-1">@Model.FirstName @Model.LastName</p>
                    <p class="mb-1">@Model.Address</p>
                    <p class="mb-1 text-muted">@Model.Email</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <h5>Статус заказа</h5>
                    <h3 class="text-uppercase text-primary">@Model.Status</h3>
                    <p class="text-muted">Дата: @Model.OrderDate.ToString("f")</p>
                </div>
            </div>

            <table class="table border-top">
                <thead>
                    <tr>
                        <th>Товар</th>
                        <th class="text-center">Кол-во</th>
                        <th class="text-end">Цена</th>
                        <th class="text-end">Итого</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.OrderItems)
                    {
                        <tr>
                            <td>@(item.Product?.Name ?? "Товар удален")</td>
                            <td class="text-center">@item.Quantity</td>
                            <td class="text-end">₽@item.Price.ToString("N0")</td>
                            <td class="text-end">₽@( (item.Price * item.Quantity).ToString("N0") )</td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th colspan="3" class="text-end">Итого к оплате:</th>
                        <th class="text-end text-danger fs-4">₽@Model.TotalAmount.ToString("N0")</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
    <div class="mt-3">
        <a asp-action="MyOrders" class="btn btn-secondary">Назад к списку</a>
    </div>
</div>