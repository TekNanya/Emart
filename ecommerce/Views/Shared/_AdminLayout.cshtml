@{
    // Detect current controller to highlight the sidebar correctly
    var controller = ViewContext.RouteData.Values["controller"]?.ToString();
}
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AfroMart Admin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        :root {
            --admin-orange: #D35400;
            --sidebar-bg: #1a1a1a;
        }

        body {
            background-color: #f8f9fa;
            font-family: 'Inter', sans-serif;
            overflow-x: hidden;
        }

        /* Sidebar Base Style */
        .sidebar {
            width: 260px;
            height: 100vh;
            background: var(--sidebar-bg);
            color: white;
            position: fixed;
            left: 0;
            top: 0;
            padding-top: 20px;
            transition: all 0.3s ease;
            overflow-y: hidden; /* Fixes sidebar scrollbar */
            z-index: 1000;
            display: flex;
            flex-direction: column;
        }

            .sidebar .nav-link {
                color: #adb5bd;
                padding: 12px 25px;
                display: flex;
                align-items: center;
                gap: 15px;
                transition: 0.2s;
                margin: 4px 15px;
                text-decoration: none;
            }

                /* Highlighting Logic */
                .sidebar .nav-link:hover,
                .sidebar .nav-link.active {
                    color: white;
                    background: var(--admin-orange);
                    border-radius: 10px;
                }

        .main-content {
            margin-left: 260px;
            padding: 40px;
            transition: all 0.3s ease;
        }

        /* Collapsed Sidebar Logic */
        .sidebar.collapsed {
            width: 80px;
        }

            .sidebar.collapsed .nav-text, .sidebar.collapsed h5 {
                display: none;
            }

            .sidebar.collapsed .nav-link {
                justify-content: center;
                padding: 12px 0;
                margin: 4px 10px;
            }

            .sidebar.collapsed ~ .main-content {
                margin-left: 80px;
            }

        .sidebar-toggle-icon {
            transition: transform 0.3s;
            cursor: pointer;
        }

        .sidebar.collapsed .sidebar-toggle-icon {
            transform: rotate(180deg);
        }

        .bg-orange-icon {
            background-color: var(--admin-orange);
            padding: 8px;
            border-radius: 8px;
        }
    </style>
</head>
<body>

    <div class="sidebar" id="sidebar">
        <div class="d-flex align-items-center px-4 mb-4 justify-content-between">
            <div class="d-flex align-items-center gap-2">
                <div class="bg-orange-icon">
                    <i class="bi bi-shop text-white fs-5"></i>
                </div>
                <h5 class="m-0 fw-bold nav-text">Admin Panel</h5>
            </div>
            <i class="bi bi-chevron-left sidebar-toggle-icon fs-5" onclick="toggleSidebar()"></i>
        </div>


        <nav class="nav flex-column flex-grow-1">
            <a asp-controller="Admin" asp-action="Index" class="nav-link @(controller == "Admin" ? "active" : "")">
                <i class="bi bi-grid-1x2 fs-5"></i> <span class="nav-text">Панель</span>
            </a>
            <a asp-controller="Products" asp-action="Index" class="nav-link @(controller == "Products" ? "active" : "")">
                <i class="bi bi-box-seam fs-5"></i> <span class="nav-text">Товары</span>
            </a>
            <a asp-controller="Categories" asp-action="Index" class="nav-link @(controller == "Categories" ? "active" : "")">
                <i class="bi bi-diagram-2 fs-5"></i> <span class="nav-text">Категории</span>
            </a>

            <a asp-controller="BlogAdmin" asp-action="Index" class="nav-link @(controller == "BlogAdmin" ? "active" : "")">
                <i class="bi bi-journal-text fs-5"></i> <span class="nav-text">Блог</span>
            </a>

            <a asp-controller="Orders" asp-action="Index" class="nav-link @(controller == "Orders" ? "active" : "")">
                <i class="bi bi-cart3 fs-5"></i> <span class="nav-text">Заказы</span>
            </a>
        </nav>

        <div class="mt-auto mb-4">
            <a href="/" class="nav-link border-top border-secondary pt-3">
                <i class="bi bi-house-door fs-5"></i> <span class="nav-text">Перейти в магазин</span>
            </a>
        </div>
    </div>

    <div class="main-content">
        @RenderBody()
    </div>

    <script>
        function toggleSidebar() {
            document.getElementById('sidebar').classList.toggle('collapsed');
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>