@using Microsoft.AspNetCore.Http
<!DOCTYPE html>
<html lang="ru" class="h-100">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - АфроМарт</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/link.css" asp-append-version="true" />

    <style>
        :root {
            --dark-bg: #1a1512;
            --accent-orange: #D35400;
            --muted-text: #a0a0a0;
        }

        header {
            margin-bottom: 0 !important;
            padding-bottom: 0 !important;
            border-bottom: none !important; /* Removes any thin grey/white lines */
        }
        /* The Fix: Flexbox Wrapper */
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            margin: 0;
            padding-top: 130px; /* Space for fixed header */
        }

        main {
            flex: 1 0 auto; /* This pushes the footer down */
        }

        
        /* Branding Icon Sync */
        .brand-logo-circle {
            background-color: var(--accent-orange) !important;
            width: 42px;
            height: 42px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white !important;
            font-weight: bold;
            font-size: 1.3rem;
        }

        .nav-link:hover, .nav-link.active-page {
            color: var(--accent-orange) !important;
        }

        .payment-icons img {
            height: 20px;
            filter: grayscale(1) brightness(1.5);
            transition: 0.3s ease;
        }

            .payment-icons img:hover {
                filter: none;
                opacity: 1;
            }
    </style>
</head>

<body class="d-flex flex-column h-100">
    <header class="fixed-top shadow-sm">
        <div class="container-fluid py-2 px-4" style="background-color: #7B3F00; color: white;">
            <div class="container d-flex justify-content-between align-items-center">
                <small class="fw-medium">Бесплатная доставка от ₽5000</small>
                <div class="d-flex align-items-center gap-3">
                    <small>+7 (999) 123-45-67</small>
                    <small style="cursor: pointer;"><i class="bi bi-globe me-1"></i> EN</small>
                </div>
            </div>
        </div>

        <nav class="navbar navbar-expand-lg navbar-light bg-white py-3">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center fw-bold fs-3 text-black" asp-controller="Home" asp-action="Index">
                    <div class="brand-logo-circle me-2">A</div>
                    АфроМарт
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav mx-auto text-uppercase fw-bold small">
                        <li class="nav-item"><a class="nav-link px-3 text-black" asp-controller="Home" asp-action="Index">Главная</a></li>
                        <li class="nav-item"><a class="nav-link px-3 text-black" asp-controller="Home" asp-action="Shop">Магазин</a></li>
                        <li class="nav-item"><a class="nav-link px-3 text-black" asp-controller="Blog" asp-action="Index">Блог</a></li>
                        <li class="nav-item"><a class="nav-link px-3 text-black" asp-controller="Home" asp-action="About">О нас</a></li>
                        <li class="nav-item"><a class="nav-link px-3 text-black" asp-controller="Home" asp-action="Contact">Контакты</a></li>
                        @* --- ADMIN PANEL LINK --- *@
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link px-3 text-danger border border-danger rounded ms-lg-2"
                                   asp-area="Admin" asp-controller="Admin" asp-action="Index"
                                   style="border-width: 2px !important; transition: 0.3s;">
                                    <i class="bi bi-shield-lock-fill"></i> Админ
                                </a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Orders" asp-action="MyOrders">Мои заказы</a>
                        </li>
                    </ul>

                    <div class="d-flex align-items-center gap-4 text-black">
                        <a href="#" class="text-decoration-none text-black"><i class="bi bi-search fs-4"></i></a>
                        <a asp-controller="Cart" asp-action="Index" class="text-decoration-none text-black position-relative">
                            <i class="bi bi-cart3 fs-4"></i>
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-orange" style="background-color: var(--accent-orange) !important;">
                                @(Context.Session.GetInt32("CartCount") ?? 0)
                            </span>
                        </a>
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="flex-shrink-0">
        @RenderBody()
    </main>

    <footer class="footer-section mt-auto">
        <div class="container">
            <div class="row g-4 mb-5">
                <div class="col-lg-4 col-md-6">
                    <div class="d-flex align-items-center gap-2 mb-4">
                        <div class="brand-logo-circle">A</div>
                        <h3 class="fw-bold mb-0">AfroMart</h3>
                    </div>
                    <p class="footer-description">Аутентичные африканские продукты питания прямо к вашему столу в России.</p>
                    <div class="mt-4 d-flex align-items-center">
                       
                        <a href="https://vk.com/your-page" class="social-circle" title="ВКонтакте" target="_blank">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M22.222 12c0-5.523-4.477-10-10-10s-10 4.477-10 10 4.477 10 10 10 10-4.477 10-10zm-11.71 4.704c-3.647 0-6.426-2.508-6.513-6.664h2.002c.06 3.05 1.396 4.338 2.457 4.603V10.04H10.35v2.632c1.16-.123 2.245-1.309 2.657-2.632h1.884c-.312 1.584-1.47 2.77-2.312 3.254 1.012.472 2.378 1.516 2.943 3.41h-2.1c-.443-1.383-1.545-2.45-2.672-2.564v2.564h-2.2z" />
                            </svg>
                        </a>
                        <a href="https://t.me/your-channel" class="social-circle" title="Telegram" target="_blank">
                            <i class="bi bi-telegram"></i>
                        </a>

                        <a href="tel:+79991234567" class="social-circle" title="Позвонить">
                            <i class="bi bi-telephone-fill"></i>
                        </a>
                    </div>
                </div>

                <div class="col-lg-2 col-md-3 col-6">
                    <h5 class="footer-heading">Навигация</h5>
                    <ul class="footer-list">
                        <li><a asp-controller="Home" asp-action="Shop">Магазин</a></li>
                        <li><a asp-controller="Blog" asp-action="Index">Блог</a></li>
                        <li><a href="#">О нас</a></li>
                    </ul>
                </div>

                <div class="col-lg-2 col-md-3 col-6">
                    <h5 class="footer-heading">Помощь</h5>
                    <ul class="footer-list">
                        <li><a href="#">Доставка</a></li>
                        <li><a href="#">FAQ</a></li>
                    </ul>
                </div>

                <div class="col-lg-4 col-md-6">
                    <h5 class="footer-heading">Контакты</h5>
                    <ul class="footer-list">
                        <li><i class="bi bi-envelope footer-icon"></i> info@afromart.ru</li>
                        <li><i class="bi bi-telephone footer-icon"></i> +7 (999) 123-45-67</li>
                    </ul>
                </div>
            </div>

          
                    <div class="footer-bottom-row d-flex justify-content-between align-items-center border-top mt-4 pt-3">
                        <p class="mb-0 text-muted">© 2026 AfroMart. Все права защищены.</p>

                        <div class="payment-methods d-flex align-items-center gap-3">
                    <img src="https://upload.wikimedia.org/wikipedia/commons/5/5b/Mir_Pay_logo.png"
                                 alt="MIR" style="height: 24px; width: auto; display: block;">

                    <img src="https://upload.wikimedia.org/wikipedia/en/b/bc/Faster_Payment_System_Russia_logo.svg"
                                 alt="SBP" style="height: 35px; width: auto; display: block;">
                        </div>
                    </div>
                
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>