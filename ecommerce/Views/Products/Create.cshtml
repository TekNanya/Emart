@model ecommerce.Models.Product
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Новый товар";
}

<div class="container-fluid py-4" style="max-width: 900px;">
    <h3 class="fw-bold mb-4">Новый товар</h3>

    <form asp-action="Create" method="post" enctype="multipart/form-data" class="bg-white p-5 rounded shadow-sm">
        @* Security token for POST requests *@
        @Html.AntiForgeryToken()

        <div class="mb-4">
            <label class="form-label fw-bold">Изображение товара</label>
            <div class="d-flex align-items-center gap-3">
                @* This box shows the preview *@
                <div id="imagePreviewContainer" class="border rounded d-flex align-items-center justify-content-center"
                     style="width: 120px; height: 120px; border-style: dashed !important; overflow: hidden; background-color: #f8f9fa;">
                    <i id="uploadIcon" class="bi bi-upload fs-3 text-muted"></i>
                    <img id="imagePreview" src="#" alt="Preview" class="d-none w-100 h-100" style="object-fit: cover;" />
                </div>

                <div>
                    <input type="file" name="imageFile" id="imageInput" class="d-none" accept="image/*" />
                    <label for="imageInput" class="btn btn-outline-secondary btn-sm">Выбрать файл</label>
                    <div class="form-text">JPG, PNG или WebP. Рекомендуется 800x800px.</div>
                </div>
            </div>
            <span class="text-danger small" id="fileError"></span>
        </div>

        <div class="row g-3">
            <div class="col-md-6">
                <label class="form-label fw-bold">Название *</label>
                <input asp-for="Name" class="form-control" placeholder="Введите название" required />
                <span asp-validation-for="Name" class="text-danger small"></span>
            </div>
            <div class="col-md-6">
                <label class="form-label fw-bold">Вес</label>
                <input asp-for="Weight" class="form-control" placeholder="500г" />
            </div>

            <div class="col-12">
                <label class="form-label fw-bold">Описание</label>
                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Расскажите о товаре..."></textarea>
            </div>

            <div class="col-md-4">
                <label class="form-label fw-bold">Цена (₽) *</label>
                <input asp-for="Price" type="number" step="0.01" class="form-control" required />
            </div>
            <div class="col-md-4">
                <label class="form-label fw-bold">Остаток</label>
                <input asp-for="Stock" type="number" class="form-control" />
            </div>
            <div class="col-md-4">
                <label class="form-label fw-bold">Категория</label>
                <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.CategoryId">
                    <option value="">-- Выберите категорию --</option>
                </select>
            </div>

            <div class="col-12 d-flex gap-4 mt-4">
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" asp-for="IsActive" checked>
                    <label class="form-check-label">Активен (Виден на сайте)</label>
                </div>
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" asp-for="IsPopular">
                    <label class="form-check-label text-warning fw-bold">Популярный</label>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-end gap-2 mt-5">
            <a asp-action="Index" class="btn btn-light px-4 border">Отмена</a>
            <button type="submit" class="btn text-white px-5" style="background-color: #D35400;">Сохранить товар</button>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        // Preview Logic: Shows the image immediately after selection
        document.getElementById('imageInput').onchange = function (evt) {
            const [file] = this.files;
            if (file) {
                const preview = document.getElementById('imagePreview');
                const icon = document.getElementById('uploadIcon');

                preview.src = URL.createObjectURL(file);
                preview.classList.remove('d-none');
                icon.classList.add('d-none');

                document.getElementById('imagePreviewContainer').style.borderStyle = 'solid';
            }
        };
    </script>
}