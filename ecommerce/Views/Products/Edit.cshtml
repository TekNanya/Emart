@model ecommerce.Models.Product
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Редактировать товар";
}

<div class="container-fluid py-4" style="max-width: 900px;">
    <h3 class="fw-bold mb-4">Редактировать товар</h3>

    <form asp-action="Edit" method="post" enctype="multipart/form-data" class="bg-white p-5 rounded shadow-sm">
        @Html.AntiForgeryToken()

        @* Hidden fields are crucial for the Edit POST action *@
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="ImageUrl" />
        <input type="hidden" asp-for="CreatedDate" />

        <div class="mb-4">
            <label class="form-label fw-bold d-block">Изображение товара</label>
            <div class="d-flex align-items-center gap-4">
                <div class="text-center">
                    <small class="text-muted d-block mb-1">Текущее:</small>
                    <img src="@Model.ImageUrl" id="currentImage" class="rounded border" style="width: 120px; height: 120px; object-fit: cover;" />
                </div>

                <div class="text-center d-none" id="newPreviewContainer">
                    <small class="text-success d-block mb-1">Новое:</small>
                    <img id="imagePreview" src="#" class="rounded border" style="width: 120px; height: 120px; object-fit: cover;" />
                </div>

                <div class="flex-grow-1">
                    <label class="form-label small">Заменить фото (необязательно)</label>
                    <input type="file" name="imageFile" id="imageInput" class="form-control" accept="image/*" />
                    <div class="form-text">Оставьте пустым, чтобы сохранить текущее фото.</div>
                </div>
            </div>
        </div>

        <div class="row g-3">
            <div class="col-md-6">
                <label class="form-label fw-bold">Название (RU) *</label>
                <input asp-for="Name" class="form-control" placeholder="Введите название" required />
                <span asp-validation-for="Name" class="text-danger small"></span>
            </div>
            <div class="col-md-6">
                <label class="form-label fw-bold">Вес</label>
                <input asp-for="Weight" class="form-control" placeholder="500г" />
            </div>

            <div class="col-12">
                <label class="form-label fw-bold">Описание (RU)</label>
                <textarea asp-for="Description" class="form-control" rows="3">@Model.Description</textarea>
            </div>

            <div class="col-md-4">
                <label class="form-label fw-bold">Цена (₽) *</label>
                <input asp-for="Price" type="number" step="0.01" class="form-control" required />
            </div>
            <div class="col-md-4">
                <label class="form-label fw-bold">Остаток</label>
                <input asp-for="Stock" type="number" class="form-control" />
            </div>
            <div class="col-md-4">
                <label class="form-label fw-bold">Категория</label>
                <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.CategoryId"></select>
            </div>

            <div class="col-12 d-flex gap-4 mt-4">
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" asp-for="IsActive">
                    <label class="form-check-label">Активен</label>
                </div>
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" asp-for="IsPopular">
                    <label class="form-check-label">Популярный</label>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-end gap-2 mt-5">
            <a asp-action="Index" class="btn btn-light px-4 border">Отмена</a>
            <button type="submit" class="btn text-white px-5" style="background-color: #D35400;">Сохранить изменения</button>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        document.getElementById('imageInput').onchange = function (evt) {
            const [file] = this.files;
            if (file) {
                const preview = document.getElementById('imagePreview');
                const container = document.getElementById('newPreviewContainer');

                preview.src = URL.createObjectURL(file);
                container.classList.remove('d-none');
            }
        };
    </script>
}