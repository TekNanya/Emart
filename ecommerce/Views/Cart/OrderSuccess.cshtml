@model int
@{
    ViewData["Title"] = "Заказ оформлен";
}

<div class="container py-5 text-center">
    <div class="card shadow border-0 p-5 bg-light">
        <div class="mb-4">
            <i class="bi bi-check-circle-fill text-success" style="font-size: 5rem;"></i>
        </div>
        <h1 class="fw-bold">Спасибо за заказ!</h1>
        <p class="lead text-muted">Ваш заказ успешно принят. Номер транзакции:</p>
        <h2 class="text-primary mb-4">#@Model</h2>

        <div class="mt-4">
            <a asp-controller="Orders" asp-action="MyOrders" class="btn btn-primary btn-lg px-5">
                Мои заказы
            </a>
            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary btn-lg px-5 ms-2">
                На главную
            </a>
        </div>
    </div>
</div>