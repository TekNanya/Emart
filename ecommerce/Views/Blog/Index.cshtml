@model IEnumerable<ecommerce.Models.BlogPost>

@{
    Layout = "_Layout"; // Points to Views/Shared/_Layout.cshtml
    ViewData["Title"] = "Блог AfroMart";
}
<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-5 fw-bold mb-3">Наш <span style="color: #D35400;">Блог</span></h1>
        <p class="text-muted mx-auto" style="max-width: 600px;">
            Откройте для себя секреты африканской кухни: от традиционных рецептов до советов по использованию наших специй.
        </p>
    </div>

    <div class="row g-4">
        @if (!Model.Any())
        {
            <div class="col-12 text-center py-5">
                <i class="bi bi-journal-x display-1 text-light"></i>
                <p class="mt-3 text-muted">Пока нет опубликованных статей. Мы скоро это исправим!</p>
            </div>
        }
        else
        {
            @foreach (var post in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 border-0 shadow-sm rounded-4 overflow-hidden transition-hover">
                        <div class="position-relative">
                            <img src="@(string.IsNullOrEmpty(post.ImageUrl) ? "https://placehold.co/600x400?text=AfroMart" : post.ImageUrl)"
                                 class="card-img-top"
                                 style="height: 220px; object-fit: cover;"
                                 alt="@post.Title">
                            <div class="position-absolute top-0 start-0 m-3">
                                <span class="badge bg-white text-dark shadow-sm rounded-pill px-3 py-2">
                                    <i class="bi bi-calendar3 me-1"></i> @post.CreatedAt.ToString("dd.MM.yyyy")
                                </span>
                            </div>
                        </div>

                        <div class="card-body p-4 d-flex flex-column">
                            <h4 class="card-title fw-bold mb-3">@post.Title</h4>
                            <p class="card-text text-secondary mb-4 flex-grow-1">
                                @(post.Summary?.Length > 120 ? post.Summary.Substring(0, 120) + "..." : post.Summary)
                            </p>
                            <a asp-action="Details" asp-route-id="@post.Id"
                               class="btn btn-outline-dark rounded-pill fw-bold stretched-link">
                                Читать далее
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

<style>
    .transition-hover {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .transition-hover:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
        }
</style>