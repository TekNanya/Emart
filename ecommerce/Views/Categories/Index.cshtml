@model IEnumerable<ecommerce.Models.Category>
@{
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Категории</h2>
        <a asp-action="Create" class="btn text-white" style="background-color: #D35400;">
            <i class="bi bi-plus-lg"></i> Добавить категорию
        </a>
    </div>

    <div class="bg-white rounded shadow-sm border overflow-hidden">
        <table class="table table-hover align-middle mb-0">
            <thead class="bg-light">
                <tr>
                    <th class="ps-4">Фото</th>
                    <th>Название (RU/EN)</th>
                    <th>Slug</th>
                    <th class="text-center">Порядок</th>
                    <th class="text-center">Товаров</th>
                    <th class="text-center">Статус</th>
                    <th class="text-end pe-4">Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="ps-4">
                            <img src="@item.ImageUrl" class="rounded border" style="width: 45px; height: 45px; object-fit: cover;" />
                        </td>
                        <td>
                            <div class="fw-bold">@item.Name</div>
                            <div class="text-muted small">@item.NameEn</div>
                        </td>
                        <td><code class="text-secondary small">@item.Slug</code></td>
                        <td class="text-center"><span class="badge border text-dark">@item.DisplayOrder</span></td>
                        <td class="text-center">
                            <span class="badge rounded-pill bg-light text-dark border px-3">
                                @(item.Products?.Count ?? 0)
                            </span>
                        </td>
                        <td class="text-center">
                            <span class="badge @(item.IsActive ? "bg-success-subtle text-success" : "bg-secondary-subtle text-secondary") px-3">
                                @(item.IsActive ? "Активна" : "Скрыта")
                            </span>
                        </td>
                        <td class="text-end pe-4">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary border-0"><i class="bi bi-pencil"></i></a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger border-0"><i class="bi bi-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>