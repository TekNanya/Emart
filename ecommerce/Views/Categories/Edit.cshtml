@model ecommerce.Models.Category
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Редактировать категорию";
}

<div class="container py-4" style="max-width: 700px;">
    <div class="bg-white p-4 rounded shadow-sm">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h4 class="fw-bold m-0">Редактировать категорию</h4>
            <a asp-action="Index" class="text-muted fs-4 text-decoration-none">&times;</a>
        </div>

        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" /> @* Required for POST *@
            <input type="hidden" asp-for="ImageUrl" /> @* Keeps old image if new one isn't selected *@

            <div class="mb-4 text-center">
                <label class="form-label fw-bold d-block text-start">Текущее изображение</label>
                <div class="position-relative d-inline-block">
                    <img src="@Model.ImageUrl" id="imagePreview" class="rounded border" style="width: 200px; height: 130px; object-fit: cover;" />
                    <button type="button" class="btn btn-danger btn-sm position-absolute" style="top:-10px; right:-10px; border-radius:50%" onclick="document.getElementById('imageInput').click()">
                        <i class="bi bi-pencil-fill"></i>
                    </button>
                    <input type="file" name="imageFile" id="imageInput" class="d-none" accept="image/*" />
                </div>
            </div>

            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label small fw-bold">Название (EN)</label>
                    <input asp-for="NameEn" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label class="form-label small fw-bold">Название (RU) *</label>
                    <input asp-for="Name" class="form-control" required />
                </div>
                <div class="col-12">
                    <label class="form-label small fw-bold">Slug</label>
                    <input asp-for="Slug" class="form-control bg-light" readonly />
                </div>
                <div class="col-12 mt-3">
                    <label class="form-label small fw-bold">Описание</label>
                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="Введите описание..."></textarea>
                </div>
                <div class="col-md-6">
                    <label class="form-label small fw-bold">Порядок сортировки</label>
                    <input asp-for="DisplayOrder" type="number" class="form-control" />
                </div>

                <div class="col-md-6 d-flex align-items-center pt-4">
                    <div class="form-check form-switch ms-3">
                        <input class="form-check-input" type="checkbox" asp-for="IsActive">
                        <label class="form-check-label fw-bold small">Активна</label>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-end gap-2 mt-5">
                <a asp-action="Index" class="btn btn-light border px-4">Отмена</a>
                <button type="submit" class="btn text-white px-5" style="background-color: #D35400;">Сохранить изменения</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('imageInput').onchange = function (evt) {
            const [file] = this.files;
            if (file) {
                document.getElementById('imagePreview').src = URL.createObjectURL(file);
            }
        };
    </script>
}