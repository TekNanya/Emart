@model ecommerce.Models.Category
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Новая категория";
}

<div class="container py-4" style="max-width: 700px;">
    <div class="bg-white p-4 rounded shadow-sm">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h4 class="fw-bold m-0">Новая категория</h4>
            <a asp-action="Index" class="text-muted fs-4 text-decoration-none">&times;</a>
        </div>

        <form asp-action="Create" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()

            <div class="mb-4">
                <label class="form-label fw-bold">Изображение</label>
                <div class="image-upload-box border rounded d-flex flex-column align-items-center justify-content-center"
                     style="height: 180px; border-style: dashed !important; background-color: #fcfcfc; cursor: pointer;"
                     onclick="document.getElementById('imageInput').click()">

                    <div id="uploadPlaceholder" class="text-center">
                        <i class="bi bi-upload fs-2 text-muted"></i>
                        <p class="text-muted small">Нажмите для загрузки</p>
                    </div>
                    <img id="imagePreview" src="#" class="d-none w-100 h-100 rounded" style="object-fit: cover;" />
                    <input type="file" name="imageFile" id="imageInput" class="d-none" accept="image/*" />
                </div>
            </div>

            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label small fw-bold">Название (EN)</label>
                    <input asp-for="NameEn" class="form-control" id="nameEn" placeholder="e.g. Spices" />
                </div>
                <div class="col-md-6">
                    <label class="form-label small fw-bold">Название (RU) *</label>
                    <input asp-for="Name" class="form-control" required placeholder="например, Специи" />
                </div>

                <div class="col-12">
                    <label class="form-label small fw-bold">Slug</label>
                    <input asp-for="Slug" class="form-control bg-light" id="slugInput" readonly />
                </div>

                <div class="col-12">
                    <label class="form-label small fw-bold">Описание</label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                </div>

                <div class="col-md-6">
                    <label class="form-label small fw-bold">Порядок сортировки</label>
                    <input asp-for="DisplayOrder" type="number" class="form-control" value="5" />
                </div>
                <div class="col-md-6 d-flex align-items-center pt-4">
                    <div class="form-check form-switch ms-3">
                        <input class="form-check-input" type="checkbox" asp-for="IsActive" checked>
                        <label class="form-check-label fw-bold small">Активна</label>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-end gap-2 mt-5">
                <a asp-action="Index" class="btn btn-outline-secondary px-4">Отмена</a>
                <button type="submit" class="btn text-white px-5" style="background-color: #D35400;">Сохранить</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        // Image Preview Logic
        document.getElementById('imageInput').onchange = function (evt) {
            const [file] = this.files;
            if (file) {
                document.getElementById('imagePreview').src = URL.createObjectURL(file);
                document.getElementById('imagePreview').classList.remove('d-none');
                document.getElementById('uploadPlaceholder').classList.add('d-none');
            }
        };

        // Auto-generate slug from English Name
        document.getElementById('nameEn').addEventListener('input', function() {
            let val = this.value.toLowerCase()
                .trim()
                .replace(/[^\w\s-]/g, '')
                .replace(/[\s_-]+/g, '-')
                .replace(/^-+|-+$/g, '');
            document.getElementById('slugInput').value = val;
        });
    </script>
}