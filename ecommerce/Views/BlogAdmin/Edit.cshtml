@model ecommerce.Models.BlogPost
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Редактировать пост";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Редактировать: @Model.Title</h2>
        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill">Отмена</a>
    </div>

    <form asp-action="Edit" method="post" class="card p-4 shadow-sm border-0 rounded-4">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="CreatedAt" /> @* Keep the original date *@

        <div class="mb-3">
            <label class="form-label fw-bold">Заголовок</label>
            <input asp-for="Title" class="form-control rounded-3" />
            <span asp-validation-for="Title" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Краткое описание</label>
            <input asp-for="Summary" class="form-control rounded-3" />
            <span asp-validation-for="Summary" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">URL изображения</label>
            <input asp-for="ImageUrl" class="form-control rounded-3" />
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Контент</label>
            <textarea asp-for="Content" class="form-control rounded-3" rows="10"></textarea>
            <span asp-validation-for="Content" class="text-danger small"></span>
        </div>

        <button type="submit" class="btn btn-primary rounded-pill px-5 py-2 fw-bold">Сохранить изменения</button>
    </form>
</div>