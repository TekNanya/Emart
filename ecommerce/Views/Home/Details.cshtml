@model ecommerce.Models.Product

<div class="container my-5 pt-5">
    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card border-0 shadow-sm p-2 bg-light">
                <img src="@Model.ImageUrl" class="img-fluid rounded shadow-sm" alt="@Model.Name">
            </div>
        </div>

        <div class="col-md-6 ps-lg-5">
            <h1 class="display-5 fw-bold mb-3">@Model.Name</h1>
            <h3 class="text-orange fw-bold mb-4">₽@Model.Price</h3>

            <p class="text-muted fs-5 mb-5">@Model.Description</p>

            <form asp-controller="Cart" asp-action="Add" method="post">
                <input type="hidden" name="productId" value="@Model.Id" />

                <div class="d-flex align-items-center gap-3">
                    <div class="input-group" style="width: 140px; border: 2px solid #eee; border-radius: 8px;">
                        <button type="button" class="btn btn-white border-0" onclick="this.parentNode.querySelector('input[type=number]').stepDown()">-</button>
                        <input type="number" name="quantity" value="1" min="1" class="form-control border-0 text-center fw-bold" readonly>
                        <button type="button" class="btn btn-white border-0" onclick="this.parentNode.querySelector('input[type=number]').stepUp()">+</button>
                    </div>

                    <button type="submit" class="btn btn-orange btn-lg px-5 text-uppercase fw-bold flex-grow-1 shadow-sm">
                        <i class="bi bi-cart-plus me-2"></i> В корзину
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>